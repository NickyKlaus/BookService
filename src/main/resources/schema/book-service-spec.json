{
  "openapi": "3.0.2",
  "info": {
    "title": "Book service",
    "description": "Book Service provides books from the local library",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "name": "Nicky Klaus",
      "url": "https://github.com/NickyKlaus"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  },
  "servers": [
    {
      "url": "/api/v3"
    }
  ],

  "paths": {
    "/library": {
      "get": {
        "description": "Returns all books",
        "produces": ["application/json"],
        "summary": "Get books",
        "operationId": "getLibrary",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/xml": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Book"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Book"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Books not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Cover": {
        "type": "object",
        "properties": {
          "image": {
            "description": "Cover binary data",
            "type": "string",
            "format": "byte"
          },
          "format": {
            "description": "Cover format",
            "type": "string",
            "example": "jpeg"
          }
        },
        "additionalProperties": false
      },
      "Book": {
        "type": "object",
        "properties": {
          "id": {
            "description": "Book identifier",
            "type": "string",
            "example": "62a8d6e28ac2515e4afedb57"
          },
          "name": {
            "description": "Name of the book",
            "type": "string",
            "example": "Name"
          },
          "format": {
            "description": "Book's file format",
            "type": "string",
            "example": "djvu"
          },
          "text": {
            "description": "First page of the book",
            "type": "string",
            "example": "Text"
          },
          "cover": {
            "description": "Cover of the book",
            "type": "object",
            "$ref": "#/components/schemas/Cover"
          }
        },
        "additionalProperties": false
      }
    }
  }
}
